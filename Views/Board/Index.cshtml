@model IEnumerable<Board>

<div class="d-flex justify-content-center mb-2">
    <a class="btn btn-outline-primary btn-lg btn-block my-3"
       asp-controller="Board"
       asp-action="Create">Create new UserStory</a>
</div>


@if (Model.Count() > 0)
{
<table class="table table-bordered">
    <thead class="text-center">
        <tr>
            <th>
                <h1 class="display-4">To Do</h1>

            </th>
            <th>
                <h1 class="display-4">Doing</h1>

            </th>
            <th>
                <h1 class="display-4">Code Review</h1>

            </th>
            <th>
                <h1 class="display-4">Done</h1>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="width:25%;">
                @foreach (var board in Model)
                {
                   @if (board.Status == Status.ToDo)
                   {
                       @await Html.PartialAsync("_cardPartial", board)
                   }
                }
            </td>
            <td style="width:25%;">
                @foreach (var board in Model)
                {
                   @if (board.Status == Status.Doing)
                   {
                       @await Html.PartialAsync("_cardPartial", board)
                   }
                }
            </td>
            <td style="width:25%;">
                @foreach (var board in Model)
                {
                   @if (board.Status == Status.CodeReview)
                   {
                       @await Html.PartialAsync("_cardPartial", board)
                   }
                }
            </td>
            <td style="width:25%;">
                @foreach (var board in Model)
                {
                   @if (board.Status == Status.Done)
                   {
                       @await Html.PartialAsync("_cardPartial", board)
                   }
                }
            </td>
        </tr>
    </tbody>
</table>
 }
 else
  {
    <div class="d-flex justify-content-center">
       <h5 class="display-4">Currently no userstories, create some :)</h5>
    </div>
  }